<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BurgerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/burgerOne"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/burger"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bungee"
            android:text="Welcome to Burger Town"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:src="@drawable/burger"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="9dp"
        android:layout_marginVertical="10dp"
        android:background="@color/darkBrown">

        <TextView
            android:id="@+id/burgerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Select a Burger"
            android:layout_marginHorizontal="9dp"
            android:fontFamily="@font/bungee"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/burgerCategory"
            android:paddingHorizontal="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:id="@+id/nonVegBurgerRadioButton"
                android:text="Non-Veg Burger"
                android:textColor="@color/white"
                android:fontFamily="@font/bungee"
                android:layout_marginHorizontal="10dp"
                android:theme="@style/MyRadioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:id="@+id/vegBurgerRadioButton"
                android:text="Veg Burger"
                android:textColor="@color/white"
                android:fontFamily="@font/bungee"
                android:layout_marginHorizontal="10dp"
                android:theme="@style/MyRadioButton"/>
        </RadioGroup>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/burgerFrame"/>
</LinearLayout>